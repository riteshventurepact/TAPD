@model FTAPWeb.Company

@{
    ViewBag.Title = "Companies";
    Layout = "~/Views/Shared/_TAPDLayoutPage.cshtml";
}

<!--start of Interests-->
<div class="interest_outr">
    <div class="interest_heading_main">
        <p>Companies</p>
    </div>
    <div class="interest_inner">
        <div class="interest_list">
            @foreach (var company in ViewBag.Companies)
            {
                <div class="interest_list_inner">
                    <a href="javascript:void(0);">
                        <img src="@Url.Content(company.CompanyPicture)" /></a>
                    <h4>@company.CompanyName</h4>
                    <p>20 Opportunities</p>
                </div>
            }
        </div>
    </div>
</div>
<!--end of interests-->
