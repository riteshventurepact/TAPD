@model FTAPWeb.Interest

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Interest</legend>

        @Html.HiddenFor(model => model.InterestId)

        <div class="editor-label">
            @Html.LabelFor(model => model.InterestName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.InterestName)
            @Html.ValidationMessageFor(model => model.InterestName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.InterestDescription)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.InterestDescription)
            @Html.ValidationMessageFor(model => model.InterestDescription)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.InterestPicture)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.InterestPicture)
            @Html.ValidationMessageFor(model => model.InterestPicture)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.IsActive)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.IsActive)
            @Html.ValidationMessageFor(model => model.IsActive)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.LastUpdatedOn)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.LastUpdatedOn)
            @Html.ValidationMessageFor(model => model.LastUpdatedOn)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
