    <div class="clear"></div>
    <div class="compnay_info_inner">
        <form class="company_info_form">
            <div class="company_form_inner">
                <label>COMPANY LOGO</label>
                <input type="" name="file_upload" class="file_upload">
                <div class="profile_pic_info">
                    <ul>
                        <li><a href="javascript:void(0)">Take Photo...</a></li>
                        <li><a href="javascript:void(0)">Upload New...</a></li>
                        <li><a href="javascript:void(0)">Choose Photo...</a></li>
                        <li><a href="javascript:void(0)">Delete...</a></li>
                    </ul>
                </div>
                <p>You can upload a JPG, GIF or PNG file (File size limit is 4 MB).</p>
            </div>
            <div class="company_form_inner">
                <label>PRODUCT/SERVICE</label>
                <div class="company_add">
                    <input type="text" placeholder="Add product and services tags" />
                    <span><a href="javascript:void(0)">
                        <img src="~/Content/images/company_add.jpg" /></a></span>
                </div>
            </div>
            <div class="company_form_inner">
                <label>LOCATION</label>
                <div class="company_add">
                    <input type="text" placeholder="Add one or more locations" />
                    <span><a href="javascript:void(0)">
                        <img src="~/Content/images/company_add.jpg" /></a></span>
                </div>
            </div>
            <div class="company_form_inner">
                <label>SIZE</label>
                <div class="checkbox_main">
                    <div class="checkbox_outr">
                        <input type="checkbox" class="regular-checkbox" id="checkbox-1-1">
                        <label for="checkbox-1-1"></label>
                        <div class="employees">
                            <label>Small:</label>
                            <label>10-35 employees</label>
                        </div>
                    </div>
                    <div class="checkbox_outr">
                        <input type="checkbox" class="regular-checkbox" id="checkbox-1-2">
                        <label for="checkbox-1-2"></label>
                        <div class="employees">
                            <label>Medium:</label>
                            <label>35-100 employees</label>
                        </div>
                    </div>
                    <div class="checkbox_outr">
                        <input type="checkbox" class="regular-checkbox" id="checkbox-1-3">
                        <label for="checkbox-1-3"></label>
                        <div class="employees">
                            <label>Large:</label>
                            <label>100-1000 employees</label>
                        </div>
                    </div>
                    <div class="checkbox_outr">
                        <input type="checkbox" class="regular-checkbox" id="checkbox-1-4">
                        <label for="checkbox-1-4"></label>
                        <div class="employees">
                            <label>Extra Large:</label>
                            <label>1000 + employees</label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="company_form_inner">
                <label>WE’RE PASSIONATE ABOUT...</label>
                <label>Please select all that apply</label>
                <div class="personalization_inner">

                   

                    @foreach (var item in ViewBag.InterestList)
                    {
                        <div class="personalization_inner_list">
                            <a href="javascript:void(0);">
                                <img class="active" src="@item.InterestPicture"/></a>
                            <h4>@item.InterestName</h4>
                        </div>
                    }


                </div>
                <div class="company_form_inner">
                    <label>SKILLS WE’RE LOOKING FOR...</label>
                    <div class="company_add">
                        <input type="text" placeholder="Add skills & expertise" />
                        <span><a href="javascript:void(0)">
                            <img src="~/Content/images/company_add.jpg" /></a></span>
                    </div>
                </div>
                <div class="company_form_inner">
                    <label></label>
                    <input type="submit" class="button" value="DONE" />
                </div>
        </form>
    </div>
</div>
